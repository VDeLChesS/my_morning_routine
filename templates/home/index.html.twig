{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/app.scss') }}">
	<style>
		html {
			box-sizing: border-box;
		}

		body {
			margin: 0;
			min-height: 100vh;
		}
	</style>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/home.js') }}"></script>
	<script src="https://kit.fontawesome.com/ecb1fa5ff2.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
	{{ include('../components/navbar.html.twig') }}

	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div class="alert alert-success" role="alert">
			Welcome
			{{ app.user.username }}
		</div>
	{% endif %}

	{% if is_granted('ROLE_ADMIN') %}
		<div class="alert alert-success" role="alert">
			Welcome Admin
		</div>
	{% endif %}


	<main>

		<section
			id="home">
			<!-- Video -->
			<div class="video-container">
				<video autoplay loop muted>
					<source src="{{ asset('uploads/morning_bg.mp4') }}">
				</video>
			</div>
			<!-- Overlay -->
			<div class="overlay">
				<div>
					<h1>Your Morning Routine Planner</h1>
					<p>Get your routine activities organized to improve your quality of Life</p>
				</div>
			</div>
		</section>
	</main>
{% endblock %}
