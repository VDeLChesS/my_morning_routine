{% extends 'base.html.twig' %}

{% block title %}Challenges index{% endblock %}

{% block body %}
    <h1>Challenges index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Points_award</th>
                <th>Duration</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for challenge in challenges %}
            <tr>
                <td>{{ challenge.id }}</td>
                <td>{{ challenge.name }}</td>
                <td>{{ challenge.description }}</td>
                <td>{{ challenge.pointsAward }}</td>
                <td>{{ challenge.duration }}</td>
                <td>{{ challenge.startDate ? challenge.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ challenge.endDate ? challenge.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_challenges_show', {'id': challenge.id}) }}">show</a>
                    <a href="{{ path('app_challenges_edit', {'id': challenge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_challenges_new') }}">Create new</a>
{% endblock %}
