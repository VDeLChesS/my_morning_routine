{% extends 'base.html.twig' %}

{% block title %}Challenges{% endblock %}

{% block body %}
    <h1>Challenges</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ challenge.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ challenge.description }}</td>
            </tr>
            <tr>
                <th>Points_award</th>
                <td>{{ challenge.pointsAward }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ challenge.duration }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ challenge.startDate ? challenge.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ challenge.endDate ? challenge.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_challenges_index') }}">back to list</a>

    <a href="{{ path('app_challenges_edit', {'id': challenge.id}) }}">edit</a>

    {{ include('challenges/_delete_form.html.twig') }}
{% endblock %}
